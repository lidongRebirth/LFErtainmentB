<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rel_integral"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m60"
                android:background="@color/white"
                android:paddingLeft="@dimen/m15"
                android:paddingRight="@dimen/m15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/youjiantou"
                    android:drawablePadding="@dimen/m8"
                    android:text="企业/组织全称"
                    android:maxEms="7"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/m110"
                    android:background="@null"
                    android:hint="请正确填写真实姓名" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m60"
                android:background="@color/white"
                android:paddingLeft="@dimen/m15"
                android:paddingRight="@dimen/m15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/youjiantou"
                    android:drawablePadding="@dimen/m8"
                    android:text="企业/组织注册编号"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:maxEms="7"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/m110"
                    android:background="@null"
                    android:hint="请输入企业/注册编号" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m60"
                android:background="@color/white"
                android:paddingLeft="@dimen/m15"
                android:paddingRight="@dimen/m15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/youjiantou"
                    android:drawablePadding="@dimen/m8"
                    android:text="法人（或运营者）姓名"
                    android:maxEms="7"
                    android:singleLine="false"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/m110"
                    android:background="@null"
                    android:hint="姓名" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m60"
                android:background="@color/white"
                android:paddingLeft="@dimen/m15"
                android:paddingRight="@dimen/m15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/youjiantou"
                    android:drawablePadding="@dimen/m8"
                    android:text="法人（或运营者）身份证号"
                    android:maxEms="7"
                    android:singleLine="false"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/m110"
                    android:background="@null"
                    android:hint="身份证号" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/m15"
                android:paddingRight="@dimen/m15">
                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/youjiantou"
                    android:drawablePadding="@dimen/m8"
                    android:text="上传营业执照或组织登记证书"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
                <LinearLayout
                    android:id="@+id/ly_image"
                    android:layout_width="@dimen/m200"
                    android:layout_height="@dimen/m100"
                    android:layout_below="@id/tv_text"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/m20">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/m20"
                        android:src="@mipmap/jia"/>
                    <TextView
                        android:layout_marginTop="@dimen/m10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="上传图片" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/ly_image"
                    android:layout_marginTop="@dimen/m10">
                    <TextView
                        android:text="上传说明"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="1、企业上传营业执照，若办理过三证合一的企业，请上传最新的营业执照。社会团体上传等级证书"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/m10"
                        android:layout_marginTop="@dimen/m5"/>
                    <TextView
                        android:text="2、格式要求：原件照片/扫描件或复印件加盖企业公章后的扫描件（支持jpg、jpeg、bmp格式，大小不超过1M）"                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/m10"
                        android:layout_marginTop="@dimen/m5"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/m15"
                android:paddingRight="@dimen/m15">
                <TextView
                    android:id="@+id/tv_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/youjiantou"
                    android:drawablePadding="@dimen/m8"
                    android:text="上传法人或运营者身份证照片"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="@dimen/m200"
                    android:layout_height="@dimen/m100"
                    android:layout_below="@id/tv_t"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/m20">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/m20"
                        android:src="@mipmap/jia"/>
                    <TextView
                        android:layout_marginTop="@dimen/m10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="上传图片" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/m10"
                    android:layout_below="@+id/ll">
                    <TextView
                        android:text="上传说明"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="1、身份证正面照片"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/m10"
                        android:layout_marginTop="@dimen/m5"/>
                    <TextView
                        android:text="2、格式要求：支持jpg、jpeg、bmp、png格式，大小不超过1M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/m10"
                        android:layout_marginTop="@dimen/m5"/>
                </LinearLayout>


            </RelativeLayout>

            <Button
                android:id="@+id/btn_up"
                android:text="上传"
                android:layout_marginLeft="@dimen/m50"
                android:layout_marginRight="@dimen/m50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/m1"
                android:background="@color/bg_line"
                android:layout_marginLeft="@dimen/m15"
                android:layout_marginRight="@dimen/m15"/>
        </LinearLayout>
    </ScrollView>





</LinearLayout>